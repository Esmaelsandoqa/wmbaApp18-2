@model wmbaApp.Models.PlayersLineUp

<div>
    <hr />
    <dl class="row">
       
        @*  <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.player.FullName)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.player.FullName)
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameLocation)
        </dd>
        <dt class="col-sm-2">
            Home Team
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TmName)
        </dd>
       
        <dt class="col-sm-2">
          Home Team Players
        </dt>
        <dd class="col-sm-10">
            @foreach (var player in Model.Players)
            {
                <span>@player.PlyrFirstName</span>
                <span>, </span>
            }
        </dd>
        <dt class="col-sm-2">
            Away team 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitorTeam.TmName)
        </dd>
       
        <dt class="col-sm-2">
            Away team Players
        </dt>
        <dd class="col-sm-10">
            @foreach (var player2 in Model.CompetatorPlayers)
            {
                <span>@player2.PlyrFirstName</span>
                <span>, </span>
            }
        </dd>
    </dl>
</div>



<div>
    
    <a asp-action="Index">Back to LineUp List</a>
</div>
